<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
<% end %>


<p><%= link_to "edit name", edit_cocktail_path(@cocktail) %></p>

<p><%= link_to "create a dose", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "back", cocktails_path %></p>
